<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudMusic" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">@color/logored</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>


    </style>

    <!--    启动页的主题-->
    <style name="StartTheme" parent="EntryTheme">
        <item name="android:windowBackground">@color/logored</item>
    </style>

    <!--    入口的主题-->
    <style name="EntryTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/logored</item>
        <item name="colorPrimaryDark">@color/logored</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <!--    透明状态栏-->
    <style name="TranslucentStatusTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/cloudred</item>
        <item name="colorPrimaryDark">@color/cloudred</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <!--    歌单详情页的主题-->
    <style name="PlayListTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <!--    播放页的主题-->
    <style name="PlayActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--        <item name="android:activityCloseEnterAnimation">@anim/slide_bottom_in</item>-->
    </style>



</resources>